<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:padding="0dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:id="@+id/dialog_ll1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/imageView"/>
        <RelativeLayout
            android:background="#a6e9c06e"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Place Order"
            android:id="@+id/sample"
            android:textColor="#010101"
            android:textSize="20dp"/>
        <TextView
            android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

            android:layout_below="@id/sample"
        android:text="Rate:"
            android:id="@+id/dialog_rate_tv"
            android:textSize="15dp"
            android:textColor="#000000"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_rate"
            android:textSize="15dp"
            android:layout_toRightOf="@id/dialog_rate_tv"
            android:layout_below="@id/sample"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_ll1"
        android:id="@+id/desc_tv"
        android:textColor="@color/frontSaffron"
        android:padding="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/desc_tv"
        android:id="@+id/dialog_ll2"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp"
            android:background="@color/frontSaffron"
            android:layout_weight="1"
            android:id="@+id/btn_minus"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@color/frontSaffron"
            android:id="@+id/btn_plus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dishCount"
            android:text="1"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/dialog_ll2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/frontSaffron"
            android:text="Cancel"
            android:id="@+id/dialog_cancel"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/frontSaffron"
            android:layout_weight="1"
            android:text="Place"
            android:id="@+id/dialog_done"/>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>