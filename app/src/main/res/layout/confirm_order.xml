<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/dialog_ll1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textColor="#010101"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:id="@+id/sample"
            android:textColor="#010101"
            android:textSize="20dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate:"
            android:textSize="15dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_rate"
            android:textSize="15dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/dialog_ll1"
        android:id="@+id/dialog_ll2"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp"
            android:background="@color/frontSaffron"
            android:layout_weight="1"
            android:id="@+id/btn_minus"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@color/frontSaffron"
            android:id="@+id/btn_plus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dishCount"
            android:text="1"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="50dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/dialog_ll2"
        android:id="@+id/tv_customize"
        android:text="Customize"
        android:textColor="#010101"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customize">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/frontSaffron"
            android:text="Cancel"
            android:id="@+id/dialog_cancel"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/frontSaffron"
            android:layout_weight="1"
            android:text="Place"
            android:id="@+id/dialog_done"/>
    </LinearLayout>

</RelativeLayout>