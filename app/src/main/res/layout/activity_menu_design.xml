<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/status"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#a66214">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_above="@+id/linearLayout3"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:" />
                <!--************************Status List View****************************-->
                <ListView
                    android:id="@+id/status_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayout2"
                    android:layout_below="@id/status_tv1"
                    android:padding="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="10dp"
                    android:text="Total" />

                <TextView
                    android:id="@+id/status_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="100" />
                <Button
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="showFinalDialog"
                    android:background="@drawable/round_green"
                    android:text="Pay" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearLayout4"
                android:layout_alignParentStart="true">
                <!--*********************MenuGrid**************************-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                <ScrollView
                    android:id="@+id/scroll_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e9c06e">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="3"
                        android:padding="10dp"
                        android:rowCount="4">


                        <!--Row1***********************************-->
                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/soup"
                                android:tag="grid1" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/veg"
                                android:tag="grid2" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/spicy_indian"
                                android:tag="grid3" />
                        </RelativeLayout>
                        <!--Row1********************-->


                        <!--Row2********************-->
                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/chinese"
                                android:tag="grid4" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/briyani"
                                android:tag="grid5" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bread"
                                android:tag="grid6" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/gravy"
                                android:tag="grid7" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/grill"
                                android:tag="grid8" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/roll"
                                android:tag="grid9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dessert"
                                android:tag="grid10" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/grid_btn_height"
                            android:layout_columnWeight="1"
                            android:padding="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="showViewPager"
                                android:padding="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drinks"
                                android:tag="grid11" />
                        </RelativeLayout>

                    </GridLayout>

                </ScrollView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ffebab"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true"
                        android:background="#03798b"
                        android:onClick="sendNotification"
                        android:text="water" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>